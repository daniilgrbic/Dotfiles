[colors]
background = #121212
background-alt = #373B41
foreground = #C5C8C6
accent = #FF7139
alert = #A54242
disabled = #707880

[bar/main-bar]
width = 100%
height = 18pt
radius = 0
bottom = true

background = #00000000
foreground = ${colors.foreground}

line-size = 3pt

border-size = 4pt
border-bottom-size = 0pt
border-color = #00000000

padding-left = 0
padding-right = 1

module-margin = 5px

separator = |
separator-foreground = ${colors.disabled}

font-0 = monospace;2
font-1 = JetBrains Mono:pixelsize=16;2
font-2 = Noto Sans Mono CJK JP;2
font-3 = Noto Serif CJK JP;2
font-4 = Unifont-JP:pixelsize=13;2

cursor-click = pointer
cursor-scroll = ns-resize

enable-ipc = true

modules-left = xworkspaces i3 xwindow
modules-center = systray
modules-right = now-playing pulseaudio backlight battery xkeyboard date powermenu

[module/xworkspaces]
type = internal/xworkspaces
label-active = %name%
label-active-background = ${colors.background-alt}
label-active-underline= ${colors.accent}
label-active-padding = 1
label-occupied = %name%
label-occupied-padding = 1
label-urgent = %name%
label-urgent-background = ${colors.alert}
label-urgent-padding = 1
label-empty = %name%
label-empty-foreground = ${colors.disabled}
label-empty-padding = 1
reverse-scroll = true

[module/i3]
type = internal/i3
format = <label-mode>
label-mode-padding = 1
label-mode-foreground = ${colors.background}
label-mode-background = ${colors.accent}

[module/xwindow]
type = internal/xwindow
label = %title:0:60:...%

[module/systray]
type = internal/tray
format-margin = 8pt
tray-spacing = 8pt

[module/now-playing]
type = custom/script
tail = true
exec = ~/.config/polybar/scripts/now_playing.py
click-right = "kill -USR1 $(pgrep --oldest --parent %pid%)"

[module/pulseaudio]
type = internal/pulseaudio
label-volume = %percentage%%
format-volume-prefix = "VOL "
format-volume-prefix-foreground = ${colors.accent}
label-muted = muted
label-muted-foreground = ${colors.disabled}

[module/backlight]
type = internal/backlight
use-actual-brightness = true
poll-interval = 0
enable-scroll = true
scroll-interval = 10
label = "%percentage%%"
format-prefix = "BRI "
format-prefix-foreground = ${colors.accent}

; Use the following command to list batteries and adapters: $ ls -1 /sys/class/power_supply/
[module/battery]
type = internal/battery
full-at = 95 
low-at = 5
battery = BAT0 
adapter = ADP0
poll-interval = 5
label-low = "BAT %{F-}LOW"
format-low-foreground = ${colors.accent}
label-discharging = "BAT %{F#f75403}%percentage%% %consumption%W"
format-discharging-foreground = ${colors.accent}
label-charging = "BAT %{F#a2f703}%percentage%% %consumption%W"
format-charging-foreground = ${colors.accent}
label-full = "BAT %{F-}FULL"
format-full-foreground = ${colors.accent}

[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock
label-layout = "%layout%"
label-layout-foreground = ${colors.accent}
label-indicator-padding = 1   
label-indicator-foreground = ${colors.background}
label-indicator-background = ${colors.accent}

[module/date]
type = internal/date
interval = 1
date = %H:%M
date-alt = %Y-%m-%d %H:%M:%S
label = %date%
label-foreground = ${colors.accent}

[module/powermenu]
type = custom/script
exec = echo "‚èª"
interval = 5
click-left = rofi -show "pwr:~/.config/rofi/power.py"

[settings]
screenchange-reload = true
pseudo-transparency = true
